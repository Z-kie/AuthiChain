{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["ES2020"],
    "jsx": "react",
    "noEmit": false,
    "outDir": "./dist",
    "paths": {
      "@shared/*": ["./shared/*"]
    }
  },
  "include": [
    "server/**/*",
    "script/**/*",
    "shared/**/*",
    "drizzle.config.ts",
    "vite.config.ts"
  ],
  "exclude": ["node_modules"]
}
